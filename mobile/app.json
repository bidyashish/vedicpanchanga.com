{
  "expo": {
    "name": "Vedic Panchanga",
    "slug": "vedic-panchanga",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "vedicpanchanga",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ff6b35"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vedicpanchanga.app",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Vedic Panchanga uses your location to calculate accurate sunrise, sunset, and muhurta timings based on your current position."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ff6b35"
      },
      "package": "com.vedicpanchanga.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Vedic Panchanga to use your location for accurate astronomical calculations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
